# 2017/02/20 Note: Commenting out 'boot_progress' requirements until they are working in product code.
# TODO:  Uncomment the boot_progress lines when support is re-introduced.
{
    "BMC Power On": {
        "start": {
            "chassis": "^Off$",
            # "boot_progress": "^Off$",
            "host": "^Off$"
        },
        "end": {
            "chassis": "^On$",
            # "boot_progress": "^FW Progress, Starting OS$",
            "host": "^Running$",
            "os_ping": "^1$",
            "os_login": "^1$",
            "os_run_cmd": "^1$"
        },
        "bmc_reboot": 0,
        "method_type": "keyword",
        "method": "Initiate Power On  wait=${0}"
    },
    "BMC Power Off": {
        "start": {
            "chassis": "^On$",
            # "boot_progress": "^FW Progress, Starting OS$",
            "host": "^Running$"
        },
        "end": {
            "chassis": "^Off$",
            # "boot_progress": "^Off$",
            "host": "^Off$",
            "os_ping": "^0$",
            "os_login": "^0$",
            "os_run_cmd": "^0$"
        },
        "bmc_reboot": 0,
        "method_type": "keyword",
        "method": "Initiate Power Off"
    },
    "BMC MC Reset Warm": {
        "start": {
            "chassis": "^Off|On$"
        },
        "end": {
            "chassis": "^Off$",
            # "boot_progress": "^Off$",
            "host": "^Off$"
        },
        "bmc_reboot": 1,
        "method_type": "keyword",
        "method": "Start Command  /sbin/reboot"
    }
}
